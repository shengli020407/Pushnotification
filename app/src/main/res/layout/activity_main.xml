<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linner"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#DFDCDF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_share"
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_share"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_share_shop"
            android:layout_gravity="center"
            android:text="商品搜索，共239款好物"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_nest"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/linner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/redio_drawer"/>
    <RadioGroup
        android:id="@+id/redio_drawer"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="首页"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/redio_home"
            android:drawableTop="@drawable/box_home_style"
            android:textColor="@drawable/box_name_style"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="专题"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/redio_file"
            android:drawableTop="@drawable/box_file_style"
            android:textColor="@drawable/box_name_style"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="分类"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/redio_classify"
            android:drawableTop="@drawable/box_classify_style"
            android:textColor="@drawable/box_name_style"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="购物车"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/redio_shoping"
            android:drawableTop="@drawable/box_shoping_style"
            android:textColor="@drawable/box_name_style"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="我的"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/redio_person"
            android:drawableTop="@drawable/box_person_style"
            android:textColor="@drawable/box_name_style"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>