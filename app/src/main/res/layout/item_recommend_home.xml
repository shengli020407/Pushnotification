<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_recommend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="160dp"
        android:layout_height="160dp"/>
    <TextView
        android:id="@+id/tv_name_recommend"
        android:layout_margin="20sp"
        android:textColor="#050505"
        app:layout_constraintLeft_toRightOf="@id/iv_recommend"
        app:layout_constraintTop_toTopOf="@id/iv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
        android:id="@+id/tv_goods_brief_recommend"
        android:layout_margin="20sp"
        app:layout_constraintLeft_toRightOf="@id/iv_recommend"
            app:layout_constraintTop_toBottomOf="@id/tv_name_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
        android:id="@+id/tv_price_recommend"
        android:layout_margin="20sp"
        app:layout_constraintLeft_toRightOf="@id/iv_recommend"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_brief_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#050505"
        app:layout_constraintBottom_toTopOf="@id/iv_recommend"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>